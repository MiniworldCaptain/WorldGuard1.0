--Attack the creatureï¼Œdisaplay the id of the creature
local function Player_AttackHit(e)
    print(e.toobjid)
    local result,actorid=Creature:getActorID(e.toobjid)
    print(actorid)
    Chat:sendSystemMsg(actorid)
end
ScriptSupportEvent:registerEvent([=[Player.AttackHit]=],Player_AttackHit)

